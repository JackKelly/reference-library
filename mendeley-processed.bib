  url                      = {http://www.sciencedirect.com/science/article/pii/0378778879900264 http://www.sciencedirect.com/science?_ob=MImg&_imagekey=B6V2V-47X80T5-5X-1&_cdi=5712&_user=217827&_pii=0378778879900264&_origin=&_coverDate=04/30/1979&_sk=999979997&view=c&wchp=dGLzVlz-zSkWW&md5=11e2cec7aff20b1300c274889f506277&ie=/sdarticle.pdf},
